@{
    ViewBag.Title = "用户登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <h2>欢迎登录</h2>
    <form  class="login-form" id="loginform" method="post">
        <div class="form-group">
            <label for="username"  class="col-sm-2 control-label text-right">用户</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="username" placeholder="用户名">
            </div>
        </div>
        <br/><br/>
        <div class="form-group">
            <label for="password"  class="col-sm-2 control-label  text-right">密码</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="password" placeholder="密码">
            </div>
        </div>
        <br/>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox" name="rememberMe" value="true" /> 自动登录</label>
                </div>
            </div>
        </div>
        <br/>
        <div class="form-group">
            <label for="password"  class="col-sm-2 control-label  text-right"></label>
            <div class="col-sm-10">
                <label id="erroMsg" style="display:none;padding:5px ;width:100%;color:#ff0000;"></label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="ok" type="submit" class="btn btn-success">登录</button>
            </div>
        </div>
    
    </form>
    
    <br/><br/>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <a href="@Url.Action("QQLogin")" title="QQ登录">
                <img src="~/Images/Logon/login_qq.png"/> QQ登录
            </a>
            <a href="@Url.Action("WechatLogin")" title="微信登录">
                <img src="~/Images/Logon/login_wx.png"/> 微信登录
            </a>
            <a href="#" title="微博登录">
                <img src="~/Images/Logon/login_wb.png"/> 微博登录
            </a>
        </div>
    </div>
</div>
    
<script type="text/javascript">
    $('#loginform').ajaxForm({
        beforeSubmit: function () {
            $('#ok').addClass('disabled').attr('disabled', 'disabled');
        },
        error: function (result) {
            $("#erroMsg").html(result.responseText);
            $("#erroMsg").show();
            $('#ok').removeClass('disabled').removeAttr('disabled');
        },
        success: function (result) {
            window.location.href = '@ViewBag.ReturnUrl';
        }
    });
    $("input[name='password']").focus(function () {
        $("#erroMsg").hide();
    });
</script>
