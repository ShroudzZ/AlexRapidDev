@using ALEXFW.Entity.UserAndRole
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ALEXFW后台管理系统</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/admin_style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.4.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body style="min-width: 800px;">
<nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
      <a class="navbar-brand" href="#">ALEXFW网站</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
              <li><a href="@Url.Action("My", "Account")" title="" target="layout">@(User.GetUser<Admin>().Username) </a></li>
              <li><a href="@Url.Action("Index", "MyMessage")" title="" target="layout"><i class="glyphicon glyphicon-envelope ">（10）</i></a></li>
              <li><a href="@Url.Action("ChangePassword", "Account")" title="" target="layout">修改密码</a></li>
              <li><a href="@Url.Action("SignOut", "Account", new { returnUrl = Context.Request.Path })">注销</a></li>
          </ul>
      </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


<div class=" clearFix">
    <div class="admin-left" style="background-color: #333">
        @Html.Partial("_sideMenu")
    </div>
    <iframe name="layout" class="admin-right" src="@Url.Action("Overview", "Home")"></iframe>
</div>
<script>
    $(window).resize(function() {
        resize();
    });

    function resize() {
        $('.admin-left').css('height', $(window).innerHeight() - $('.navbar').outerHeight() + 'px');
        $('.admin-right').css('width', ($(document).width() - $('.admin-left').width() - 1) + 'px');
        $('.admin-right').css('height', $(window).innerHeight() - $('.navbar').outerHeight() + 'px');
    }
    resize();
</script>
</body>
</html>
